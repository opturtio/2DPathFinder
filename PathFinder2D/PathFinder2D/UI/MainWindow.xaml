<Window x:Class="PathFinder2D.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PathFinder" Height="618" Width="800"
        AllowDrop="True" DragEnter="Window_DragEnter" Drop="Window_Drop">

    <!-- Main Grid with two columns -->
    <Grid>
        <!-- Define the columns: one for the buttons and one for the path canvas -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="170"/>
            <!-- Left side, fixed width for buttons -->
            <ColumnDefinition/>
            <!-- Right side, fills remaining space -->
        </Grid.ColumnDefinitions>

        <!-- StackPanel for controls, placed in the first column -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" Height="206" Width="160">
            <Button Content="Run Dijkstra" Click="RunDijkstra_Click" Margin="5"/>
            <Button Content="Run A*" Click="RunAStar_Click" Margin="5"/>
            <Button Content="Run JPS" Click="RunJPS_Click" Margin="5"/>
            <Button Content="Clean" Click="ClearDrawnNodes" Margin="5"/>
            <Button Content="Stop" Click="StopRunning" Margin="5"/>
            <Slider Minimum="1" Maximum="30" Width="150" Height="10" Name="Speed" Margin="5"/>
            <Label Name="ResultLabel" Content="Results:" Margin="5"/>
        </StackPanel>

        <!-- Canvas for visualizing the path, placed in the second column -->
        <Canvas Name="PathCanvas" Background="White" 
                MouseLeftButtonDown="Canvas_MouseLeftButtonDown"
                MouseMove="Canvas_MouseMove"
                MouseLeftButtonUp="Canvas_MouseLeftButtonUp"
                MouseWheel="PathCanvas_MouseWheel"
                Grid.Column="1"/>
    </Grid>
</Window>
